<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/getheringopenPage_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000" >
    
    <ScrollView
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:fillViewport="true" >
        
        <LinearLayout 
            android:layout_width="match_parent"
    		android:layout_height="wrap_content"
    		android:orientation="vertical" >

            <ImageView 
		        android:id="@+id/getheringopenPage_ivImage"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:background="@drawable/configuration_profile_image"
		        android:scaleType="centerCrop" />
		    
		    <TextView 
		        android:id="@+id/getheringopenPage_tvImage"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:gravity="center_horizontal"
		        android:textColor="#ddd"
		        android:text="@string/profilePhotoCondition" />
		
		    <FrameLayout
		        android:id="@+id/getheringopenPage_frameForNickname"
		        android:layout_width="0dp"
		        android:layout_height="0dp" >
		    
		        <com.outspoken_kid.views.holo_dark.HoloStyleEditText 
			        android:id="@+id/getheringopenPage_etNickname"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent" />
		        
		        <View 
		            android:id="@+id/getheringopenPage_coverForNickname"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent" />
		        
		    </FrameLayout>
		    
		    <FrameLayout
		        android:id="@+id/getheringopenPage_frameForId"
		        android:layout_width="0dp"
		        android:layout_height="0dp" >
		    
		        <com.outspoken_kid.views.holo_dark.HoloStyleEditText 
			        android:id="@+id/getheringopenPage_etId"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent" />
		        
		        <View 
		            android:id="@+id/getheringopenPage_coverForId"
			        android:layout_width="match_parent"
			        android:layout_height="match_parent" />
		        
		    </FrameLayout>
		    
		    <com.outspoken_kid.views.holo_dark.HoloStyleSpinnerButton 
		        android:id="@+id/getheringopenPage_spPublic"
		        android:layout_width="0dp"
		        android:layout_height="0dp" />
		    
		    <com.outspoken_kid.views.holo_dark.HoloStyleEditText 
		        android:id="@+id/getheringopenPage_etIntro"
		        android:layout_width="0dp"
		        android:layout_height="0dp" />
		    
		    <com.outspoken_kid.views.holo_dark.HoloStyleButton 
		        android:id="@+id/getheringopenPage_btnOpen"
		        android:layout_width="0dp"
		        android:layout_height="0dp" />
            
        </LinearLayout>
        
    </ScrollView>
    
    <com.outspoken_kid.views.holo_dark.HoloStyleSpinnerPopup 
        android:id="@+id/getheringopenPage_pPublic"
        android:layout_width="match_parent"
        android:layout_height="match_parent" />
    
</FrameLayout>