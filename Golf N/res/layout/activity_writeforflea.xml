<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <com.outspoken_kid.views.SoftKeyboardDetector
		android:id="@+id/writeForFleaActivity_softKeyboardDetector"
        android:layout_width="match_parent"
	    android:layout_height="match_parent" />
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical" >
	    
	    <TextView
	        android:id="@+id/writeForFleaActivity_tvTitle"
	        android:layout_width="0dp"
	        android:layout_height="0dp"
	        android:gravity="center"
	        android:background="#000"
	        android:text="@string/signUp"
	        android:textColor="#fff" />
	    
	    <ScrollView 
		    android:id="@+id/writeForFleaActivity_scrollView"
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:background="#000"
		    android:fillViewport="true" >
		
		    <LinearLayout
			    android:layout_width="match_parent"
			    android:layout_height="wrap_content"
			    android:orientation="vertical" >
		
		        <TextView 
		            android:id="@+id/writeForFleaActivity_tvInput1" 
		            android:layout_width="0dp"
			    	android:layout_height="0dp"
			    	android:textColor="#fff"
			    	android:gravity="center_vertical" />
		        	    
		        <com.outspoken_kid.views.holo_dark.HoloStyleEditText
		            android:id="@+id/writeForFleaActivity_etInput1" 
		            android:layout_width="0dp"
			    	android:layout_height="0dp" />
		        
		        <TextView 
		            android:id="@+id/writeForFleaActivity_tvSpec" 
		            android:layout_width="0dp"
			    	android:layout_height="0dp"
			    	android:textColor="#fff"
			    	android:gravity="center_vertical" />
		        
		        <TextView 
		            android:id="@+id/writeForFleaActivity_tvInput2" 
		            android:layout_width="0dp"
			    	android:layout_height="0dp"
			    	android:textColor="#fff"
			    	android:gravity="center_vertical" />
		        	    
		        <com.outspoken_kid.views.holo_dark.HoloStyleEditText
		            android:id="@+id/writeForFleaActivity_etInput2" 
		            android:layout_width="0dp"
			    	android:layout_height="0dp" />
		        
		        <TextView 
		            android:id="@+id/writeForFleaActivity_tvInput3" 
		            android:layout_width="0dp"
			    	android:layout_height="0dp"
			    	android:textColor="#fff"
			    	android:gravity="center_vertical" />
		        	    
		        <com.outspoken_kid.views.holo_dark.HoloStyleEditText
		            android:id="@+id/writeForFleaActivity_etInput3" 
		            android:layout_width="0dp"
			    	android:layout_height="0dp" />
		        
		        <TextView 
		            android:id="@+id/writeForFleaActivity_tvInput4" 
		            android:layout_width="0dp"
			    	android:layout_height="0dp"
			    	android:textColor="#fff"
			    	android:gravity="center_vertical" />
		        	    
		        <com.outspoken_kid.views.holo_dark.HoloStyleEditText
		            android:id="@+id/writeForFleaActivity_etInput4" 
		            android:layout_width="0dp"
			    	android:layout_height="0dp" />
		        
		        <TextView 
		            android:id="@+id/writeForFleaActivity_tvInput5" 
		            android:layout_width="0dp"
			    	android:layout_height="0dp"
			    	android:textColor="#fff"
			    	android:gravity="center_vertical" />
		        	    
		        <com.outspoken_kid.views.holo_dark.HoloStyleEditText
		            android:id="@+id/writeForFleaActivity_etInput5" 
		            android:layout_width="0dp"
			    	android:layout_height="0dp" />
		        
		        <TextView 
		            android:id="@+id/writeForFleaActivity_tvInput6" 
		            android:layout_width="0dp"
			    	android:layout_height="0dp"
			    	android:textColor="#fff"
			    	android:gravity="center_vertical" />
		        	    
		        <com.outspoken_kid.views.holo_dark.HoloStyleEditText
		            android:id="@+id/writeForFleaActivity_etInput6" 
		            android:layout_width="0dp"
			    	android:layout_height="0dp" />
		        
		        <TextView 
		            android:id="@+id/writeForFleaActivity_tvInput7" 
		            android:layout_width="0dp"
			    	android:layout_height="0dp"
			    	android:textColor="#fff"
			    	android:gravity="center_vertical" />
		        	    
		        <com.outspoken_kid.views.holo_dark.HoloStyleEditText
		            android:id="@+id/writeForFleaActivity_etInput7" 
		            android:layout_width="0dp"
			    	android:layout_height="0dp" />
		        
		        <com.outspoken_kid.views.holo_dark.HoloStyleButton
		            android:id="@+id/writeForFleaActivity_btnNext" 
		            android:layout_width="0dp"
			    	android:layout_height="0dp" />
		        
			</LinearLayout>
		    
		</ScrollView>
	    
	</LinearLayout>
    
</FrameLayout>