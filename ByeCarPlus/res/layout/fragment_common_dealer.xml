<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/dealerPage_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg" >
    
    <com.outspoken_kid.views.OffsetScrollView
        android:id="@+id/dealerPage_scrollView"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
        android:fillViewport="true" >
        
        <RelativeLayout
            android:id="@+id/dealerPage_innerRelative"
        	android:layout_width="match_parent"
    		android:layout_height="wrap_content" >

			<ImageView 
		        android:id="@+id/dealerPage_ivImage"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true"
		        android:scaleType="centerCrop"
		        android:background="@drawable/dealer_default" />
            		
            <View 
                android:id="@+id/dealerPage_bg"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_alignParentTop="true"
		        android:background="@drawable/dealer_bg" />
            
            <View
                android:id="@+id/dealerPage_gradeBadge"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_alignTop="@id/dealerPage_ivImage"
		        android:layout_toRightOf="@id/dealerPage_ivImage" />
            
            <TextView 
                android:id="@+id/dealerPage_tvRating"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_alignTop="@id/dealerPage_gradeBadge"
		        android:layout_toRightOf="@id/dealerPage_gradeBadge"
		        android:gravity="center"
		        android:textColor="#fff"
		        android:background="@drawable/dealer_appraisal_" />
            
            <TextView 
                android:id="@+id/dealerPage_tvSuccess"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_alignTop="@id/dealerPage_tvRating"
		        android:layout_toRightOf="@id/dealerPage_tvRating"
		        android:gravity="center"
		        android:textColor="#fff"
		        android:background="@drawable/dealer_successl_" />

            <TextView
		        android:id="@+id/dealerPage_tvName"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@id/dealerPage_ivImage"
		        android:gravity="center"
		        android:singleLine="true"
		        android:ellipsize="end"
		        android:textColor="#fff" />
            
            <TextView
		        android:id="@+id/dealerPage_tvGrade"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_alignTop="@id/dealerPage_tvName"
		        android:layout_toRightOf="@id/dealerPage_tvName"
		        android:gravity="center" />
            
            <TextView
		        android:id="@+id/dealerPage_tvRatingText"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_alignTop="@id/dealerPage_tvGrade"
		        android:layout_toRightOf="@id/dealerPage_tvGrade"
		        android:gravity="center"
		        android:text="@string/customerSatisfactionDegree"
		        android:textColor="#fff" />
            
            <TextView
		        android:id="@+id/dealerPage_tvSuccessText"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_alignTop="@id/dealerPage_tvRatingText"
		        android:layout_toRightOf="@id/dealerPage_tvRatingText"
		        android:gravity="center"
		        android:text="@string/tradeSuccessCount"
		        android:textColor="#fff" />
		    
		    <View 
		        android:id="@+id/dealerPage_headerForIntro"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/dealerPage_bg"
		        android:background="@drawable/dealer_header1" />
		    
		    <TextView
		        android:id="@+id/dealerPage_tvIntro"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/dealerPage_headerForIntro"
		        android:background="@drawable/detail_body2" />
		    
		    <View 
		        android:id="@+id/dealerPage_footerForIntro"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/dealerPage_tvIntro"
		        android:background="@drawable/detail_foot" />
		    
		    <View 
		        android:id="@+id/dealerPage_headerForReview"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/dealerPage_footerForIntro"
		        android:background="@drawable/detail_head2" />
		    
		    <LinearLayout
		        android:id="@+id/dealerPage_linearForReview"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/dealerPage_headerForReview"
		        android:orientation="vertical"
		        android:background="@drawable/detail_body2" >
		        
		        <Button
		            android:id="@+id/dealerPage_btnMore"
		        	android:layout_width="0dp"
		        	android:layout_height="0dp"
		        	android:background="@drawable/dealer_more_btn" />
		        
		    </LinearLayout>
		    
		    <View 
		        android:id="@+id/dealerPage_footerForReview"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/dealerPage_linearForReview"
		        android:background="@drawable/detail_foot" />
		    
		    <View 
		        android:layout_width="10dp"
		        android:layout_height="10dp"
		        android:layout_below="@id/dealerPage_footerForReview" />
            
        </RelativeLayout>
        
    </com.outspoken_kid.views.OffsetScrollView>
    
    <View 
        android:id="@+id/dealerPage_bgForButton"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/button_bg"
        android:visibility="gone" />

    <Button 
        android:id="@+id/dealerPage_btnSelect"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:background="@drawable/select_sell_btn"
        android:visibility="gone" />
    
    <com.byecar.views.TitleBar
        android:id="@+id/dealerPage_titleBar"
        android:layout_width="match_parent"
    	android:layout_height="0dp" />
    
</RelativeLayout>
