<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/reviewListPage_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg" >
    
    <com.byecar.views.TitleBar
        android:id="@+id/reviewListPage_titleBar"
        android:layout_width="match_parent"
    	android:layout_height="0dp" />

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/reviewListPage_swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_below="@id/reviewListPage_titleBar" >

        <ListView
            android:id="@+id/reviewListPage_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@android:color/transparent"
    		android:cacheColorHint="#0000"
            android:background="#0000" />
        
    </android.support.v4.widget.SwipeRefreshLayout>
    
</RelativeLayout>
