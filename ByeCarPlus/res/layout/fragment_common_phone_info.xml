<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/phoneInfoPage_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/page_bg" >

    <com.byecar.views.TitleBar
        android:id="@+id/phoneInfoPage_titleBar"
        android:layout_width="match_parent"
    	android:layout_height="0dp" />

    <TextView
        android:id="@+id/phoneInfoPage_tvPhoneInfo"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/phoneInfoPage_titleBar"
        android:gravity="center"
        android:textColor="@color/color_green" />
    
    <View 
        android:id="@+id/phoneInfoPage_check"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@id/phoneInfoPage_tvPhoneInfo"
        android:layout_toLeftOf="@id/phoneInfoPage_tvPhoneInfo"
        android:background="@drawable/user_check" />
    
    <TextView
        android:id="@+id/phoneInfoPage_tvNeedToCertify"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/phoneInfoPage_titleBar"
        android:gravity="center"
        android:text="@string/needCertifyPhoneNumber"
        android:textColor="@color/color_red" />
    
    <Button
        android:id="@+id/phoneInfoPage_btnCertify"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/phoneInfoPage_tvNeedToCertify"
        android:background="@drawable/user_enroll_btn" />
    
    <Button
        android:id="@+id/phoneInfoPage_btnComplete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_below="@id/phoneInfoPage_btnCertify"
        android:background="@drawable/user_done_btn" />
        
</RelativeLayout>
