<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/askPage_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5" >

    <com.byecar.byecarplus.views.TitleBar
        android:id="@+id/askPage_titleBar"
        android:layout_width="match_parent"
    	android:layout_height="0dp" />
    
    <ScrollView
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@id/askPage_titleBar"
    	android:fillViewport="true" >
        
        <RelativeLayout
            android:layout_width="match_parent"
    		android:layout_height="wrap_content" >
            
            <FrameLayout
                android:id="@+id/askPage_askFrame"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_centerHorizontal="true"
		        android:layout_alignParentTop="true"
		        android:background="@drawable/ask_frame1" >
                
                <Button 
                    android:id="@+id/askPage_btnKakao"
		        	android:layout_width="0dp"
		        	android:layout_height="0dp"
		        	android:background="@drawable/ask_ask1_btn" />
                
                <Button 
                    android:id="@+id/askPage_btnFacebook"
		        	android:layout_width="0dp"
		        	android:layout_height="0dp"
		        	android:background="@drawable/ask_ask2_btn" />
                
                <Button 
                    android:id="@+id/askPage_btnEmail"
		        	android:layout_width="0dp"
		        	android:layout_height="0dp"
		        	android:background="@drawable/ask_ask3_btn" />
                
            </FrameLayout>
            
            <FrameLayout
                android:id="@+id/askPage_policyFrame"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/askPage_askFrame"
		        android:background="@drawable/ask_frame2" >
                
                <Button 
                    android:id="@+id/askPage_btnPolicy"
		        	android:layout_width="0dp"
		        	android:layout_height="0dp"
		        	android:background="@drawable/ask_ask4_btn" />
                
                <Button 
                    android:id="@+id/askPage_btnCar"
		        	android:layout_width="0dp"
		        	android:layout_height="0dp"
		        	android:background="@drawable/ask_ask5_btn" />
                
            </FrameLayout>
            
        </RelativeLayout>
        
    </ScrollView>
        
</RelativeLayout>
