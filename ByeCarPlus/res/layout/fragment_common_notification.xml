<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/notificationPage_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_color_page_bg_white3" >

    <com.byecar.views.TitleBar
        android:id="@+id/notificationPage_titleBar"
        android:layout_width="match_parent"
    	android:layout_height="0dp" />
    
    <ListView
        android:id="@+id/notificationPage_listView"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@id/notificationPage_titleBar"
    	android:listSelector="@android:color/transparent"
    	android:cacheColorHint="#0000" />
    
</RelativeLayout>
