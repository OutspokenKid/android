<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/profilePage_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg" >

    <com.byecar.views.TitleBar
        android:id="@+id/profilePage_titleBar"
        android:layout_width="match_parent"
    	android:layout_height="0dp" />
    
    <ScrollView
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@id/profilePage_titleBar"
    	android:fillViewport="true" >
        
        <RelativeLayout
            android:layout_width="match_parent"
    		android:layout_height="wrap_content" >
    		
            <TextView 
		        android:id="@+id/profilePage_tvProfileTitle"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:textColor="#fff"
		        android:gravity="center_vertical"
		        android:background="@color/title_gray" />

            <FrameLayout
                android:id="@+id/profilePage_profileFrame"
                android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_below="@id/profilePage_tvProfileTitle"
		        android:layout_centerHorizontal="true" >
                
                <Button
                    android:id="@+id/profilePage_btnProfile"
                    android:layout_width="match_parent"
		        	android:layout_height="match_parent"
		        	android:background="@drawable/sign1_picture_btn" />
                
                <ImageView
                    android:id="@+id/profilePage_ivProfile"
                    android:layout_width="match_parent"
		        	android:layout_height="match_parent"
		        	android:scaleType="centerCrop" />
                
                <View
                    android:layout_width="match_parent"
		        	android:layout_height="match_parent"
		        	android:background="@drawable/sign1_frame" />
                
            </FrameLayout>
            
            <TextView
		        android:id="@+id/profilePage_tvProfile"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/touchCameraIcon"
		        android:textColor="#000"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/profilePage_profileFrame" />
            
            <TextView 
		        android:id="@+id/profilePage_tvNickname"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_below="@id/profilePage_tvProfile"
		        android:textColor="#fff"
		        android:gravity="center_vertical"
		        android:background="@color/title_gray" />
		    
		    <com.outspoken_kid.views.holo.holo_light.HoloStyleEditText 
		        android:id="@+id/profilePage_etNickname"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/profilePage_tvNickname" />
		    
		    <TextView
		        android:id="@+id/profilePage_tvCheckNickname"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_marginRight="5dp"
		        android:layout_marginBottom="-5dp"
		        android:visibility="invisible"
		        android:textColor="#ff4b4b"
		        android:layout_alignRight="@id/profilePage_etNickname"
		        android:layout_above="@id/profilePage_etNickname" />
		    
		    <TextView
		        android:id="@+id/profilePage_tvNickname2"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/profilePage_etNickname"
		        android:layout_marginTop="20dp"
		        android:layout_marginBottom="50dp"
		        android:layout_marginRight="50dp"
		        android:gravity="center"
		        android:textColor="@color/color_red"
		        android:layout_centerHorizontal="true" />
		    		
		    <Button 
		        android:id="@+id/profilePage_btnComplete"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:background="@drawable/profile_complete_btn" 
		        android:layout_centerHorizontal="true"
		        android:layout_alignParentBottom="true" />
		    
        </RelativeLayout>
        
    </ScrollView>
        
</RelativeLayout>
