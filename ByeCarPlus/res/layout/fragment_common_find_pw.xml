<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/findPwPage_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5" >

    <com.byecar.byecarplus.views.TitleBar
        android:id="@+id/findPwPage_titleBar"
        android:layout_width="match_parent"
    	android:layout_height="0dp" />
        
	<ScrollView
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@id/findPwPage_titleBar"
    	android:fillViewport="true" >
        
        <RelativeLayout
            android:layout_width="match_parent"
    		android:layout_height="wrap_content" >
    
    		<com.outspoken_kid.views.holo.holo_light.HoloStyleEditText 
		        android:id="@+id/findPwPage_etEmail"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_alignParentTop="true" 
		        android:layout_centerHorizontal="true" />
		    
		    <Button 
		        android:id="@+id/findPwPage_btnConfirm"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:background="@drawable/pass_done_btn" 
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/findPwPage_etEmail" />

        </RelativeLayout>
        
    </ScrollView>
		    
</RelativeLayout>
