<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/selectBidPage_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg" >
    
    <com.outspoken_kid.views.OffsetScrollView
        android:id="@+id/selectBidPage_scrollView"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
        android:fillViewport="true" >
        
        <RelativeLayout
            android:id="@+id/selectBidPage_innerRelative"
        	android:layout_width="match_parent"
    		android:layout_height="wrap_content" >

            <android.support.v4.view.ViewPager 
                android:id="@+id/selectBidPage_viewPager"
        		android:layout_width="match_parent"
    			android:layout_height="0dp"
    			android:layout_alignParentTop="true"
    			android:background="@drawable/main_auction_default" />
            
            <com.outspoken_kid.views.PageNavigatorView 
                android:id="@+id/selectBidPage_pageNavigator"
        		android:layout_width="match_parent"
    			android:layout_height="0dp"
    			android:layout_centerHorizontal="true"
    			android:layout_alignBottom="@id/selectBidPage_viewPager" />
            		    
		    <View
		        android:id="@+id/selectBidPage_auctionIcon"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_alignBottom="@id/selectBidPage_viewPager"
		        android:layout_alignLeft="@id/selectBidPage_viewPager"
		        android:background="@drawable/main_hotdeal_mark2" />
		
		    <RelativeLayout
		        android:id="@+id/selectBidPage_timeRelative"
		        android:layout_width="match_parent"
		        android:layout_height="wrap_content"
		        android:layout_below="@id/selectBidPage_viewPager" >

		        <ProgressBar
			        android:id="@+id/selectBidPage_progressBar"
			        style="?android:attr/progressBarStyleHorizontal"
			        android:layout_width="match_parent"
			        android:layout_height="0dp"
			        android:max="1000"
			        android:progress="1000"
			        android:progressDrawable="@drawable/progressbar_custom_green" />
			
			    <TextView
			        android:id="@+id/selectBidPage_tvRemainTime"
			        android:layout_width="wrap_content"
			        android:layout_height="0dp"
			        android:layout_alignTop="@id/selectBidPage_progressBar"
			        android:layout_centerHorizontal="true"
			        android:gravity="top"
			        android:textColor="#fff" />
			
			    <TextView
			        android:id="@+id/selectBidPage_tvRemainTimeText"
			        android:layout_width="wrap_content"
			        android:layout_height="0dp"
			        android:layout_alignLeft="@id/selectBidPage_tvRemainTime"
			        android:layout_alignTop="@id/selectBidPage_progressBar"
			        android:gravity="center_vertical"
			        android:text="@string/remainTime"
			        android:textColor="#fff" />
			
			    <View
			        android:id="@+id/selectBidPage_timeIcon"
			        android:layout_width="0dp"
			        android:layout_height="0dp"
			        android:layout_alignLeft="@id/selectBidPage_tvRemainTime"
			        android:layout_alignTop="@id/selectBidPage_progressBar"
			        android:background="@drawable/main_time_icon" />		        
		        
		    </RelativeLayout>
		    
		    <View
		        android:id="@+id/selectBidPage_remainBg"
		        android:layout_width="match_parent"
		        android:layout_height="0dp"
		        android:layout_below="@id/selectBidPage_timeRelative"
		        android:background="#fff" />
		
		    <TextView
		        android:id="@+id/selectBidPage_tvCarInfo1"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@id/selectBidPage_timeRelative"
		        android:ellipsize="end"
		        android:gravity="bottom|left"
		        android:singleLine="true"
		        android:textColor="@color/holo_text" />
		    
		    <View 
                android:id="@+id/selectBidPage_line"
        		android:layout_width="match_parent"
    			android:layout_height="1px"
    			android:layout_below="@id/selectBidPage_tvCarInfo1"
    			android:background="@color/color_ltgray" />
		
		    <TextView
		        android:id="@+id/selectBidPage_tvCarInfo2"
		        android:layout_width="0dp"
		        android:layout_height="wrap_content"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@id/selectBidPage_tvCarInfo1"
		        android:ellipsize="end"
		        android:gravity="top|left"
		        android:singleLine="true"
		        android:textColor="@color/holo_text" />
		
		    <TextView
		        android:id="@+id/selectBidPage_tvCurrentPrice"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignParentRight="true"
		        android:layout_below="@id/selectBidPage_timeRelative"
		        android:ellipsize="end"
		        android:singleLine="true"
		        android:textColor="@color/color_orange2" />
		
		    <TextView
		        android:id="@+id/selectBidPage_tvCurrentPriceText"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignBottom="@id/selectBidPage_tvCurrentPrice"
		        android:layout_toLeftOf="@id/selectBidPage_tvCurrentPrice"
		        android:text="@string/currentPrice"
		        android:textColor="@color/color_orange2" />
		
		    <TextView
		        android:id="@+id/selectBidPage_tvBidCount"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:layout_alignRight="@id/selectBidPage_tvCurrentPrice"
		        android:layout_below="@id/selectBidPage_tvCurrentPrice"
		        android:ellipsize="end"
		        android:singleLine="true"
		        android:textColor="@color/holo_text" />
		    
		    <Button 
                android:id="@+id/selectBidPage_btnLike"
        		android:layout_width="0dp"
    			android:layout_height="0dp"
    			android:layout_toLeftOf="@id/selectBidPage_tvBidCount"
    			android:layout_alignBottom="@id/selectBidPage_tvBidCount"
    			android:gravity="center"
    			android:textColor="#fff"
    			android:background="@drawable/main_like_btn_a" />
            
            <TextView
                android:id="@+id/selectBidPage_tvLikeText"
        		android:layout_width="wrap_content"
    			android:layout_height="wrap_content"
    			android:layout_toLeftOf="@id/selectBidPage_btnLike"
    			android:layout_alignTop="@id/selectBidPage_btnLike"
    			android:text="@string/like"
    			android:textColor="@color/holo_text" />
		    
		    <RelativeLayout
		        android:id="@+id/selectBidPage_relativeForDealer"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/selectBidPage_remainBg"
		        android:background="@drawable/success_frame" />
		    
		    <Button 
		        android:id="@+id/selectBidPage_btnComplete"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/selectBidPage_relativeForDealer"
		        android:background="@drawable/success_complete_btn" />
		    
		    <View 
		        android:layout_width="10dp"
		        android:layout_height="10dp"
		        android:layout_below="@id/selectBidPage_btnComplete" />
            
        </RelativeLayout>
        
    </com.outspoken_kid.views.OffsetScrollView>
    
    <com.byecar.views.TitleBar
        android:id="@+id/selectBidPage_titleBar"
        android:layout_width="match_parent"
    	android:layout_height="0dp" />
    
</RelativeLayout>
