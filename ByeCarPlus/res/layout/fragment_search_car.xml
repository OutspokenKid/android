<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchCarPage_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5" >

    <com.byecar.byecarplus.views.TitleBar
        android:id="@+id/searchCarPage_titleBar"
        android:layout_width="match_parent"
    	android:layout_height="0dp" />

    <ListView
        android:id="@+id/searchCarPage_listView"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@id/searchCarPage_titleBar"
    	android:visibility="invisible"
    	android:cacheColorHint="#0000" />
    
    <GridView
        android:id="@+id/searchCarPage_gridView"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@id/searchCarPage_titleBar"
    	android:visibility="invisible"
    	android:numColumns="4"
    	android:cacheColorHint="#0000" />
        
</RelativeLayout>
