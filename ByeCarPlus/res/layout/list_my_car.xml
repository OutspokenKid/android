<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="@android:color/transparent"
    android:descendantFocusability="blocksDescendants" >

    <ImageView 
        android:id="@+id/list_my_car_ivImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:scaleType="centerCrop"
        android:background="@drawable/directmarket_default" />
    
    <View
        android:id="@+id/list_my_car_cover"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:background="@drawable/mypage_frame" />
    
    <View
        android:id="@+id/list_my_car_typeIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignLeft="@id/list_my_car_cover"
        android:layout_alignTop="@id/list_my_car_cover" />
    
    <View
        android:id="@+id/list_my_car_statusIcon"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@id/list_my_car_cover"
        android:layout_toRightOf="@id/list_my_car_typeIcon" />

    <TextView
        android:id="@+id/list_my_car_tvRegdate"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignRight="@id/list_my_car_cover"
        android:layout_alignTop="@id/list_my_car_cover"
        android:ellipsize="end"
        android:maxLines="2"
        android:textColor="@color/new_color_text_gray" />

    <TextView
        android:id="@+id/list_my_car_tvCarName"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@id/list_my_car_ivImage"
        android:layout_toRightOf="@id/list_my_car_ivImage"
        android:ellipsize="end"
        android:singleLine="true"
        android:gravity="center_vertical"
        android:textColor="@color/new_color_text_brown" />

    <TextView
        android:id="@+id/list_my_car_tvInfo"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/list_my_car_ivImage"
        android:layout_toRightOf="@id/list_my_car_ivImage"
        android:ellipsize="end"
        android:maxLines="2"
        android:gravity="center_vertical"
        android:textColor="@color/new_color_text_gray" />
    
    <Button 
        android:id="@+id/list_my_car_btnReview"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/list_my_car_ivImage"
        android:layout_alignParentRight="true"
        android:background="@drawable/mypage_comment_btn"
        android:visibility="invisible" />
    
    <Button 
        android:id="@+id/list_my_car_btnComplete"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/list_my_car_ivImage"
        android:layout_alignParentRight="true"
        android:background="@drawable/mypage_complete_btn"
        android:visibility="invisible" />
    
    <Button 
        android:id="@+id/list_my_car_btnSelectDealer"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/list_my_car_ivImage"
        android:layout_alignParentRight="true"
        android:background="@drawable/mypage_select_btn"
        android:visibility="invisible" />
    
    <Button 
        android:id="@+id/list_my_car_btnLike"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignBottom="@id/list_my_car_ivImage"
        android:layout_alignParentRight="true"
        android:background="@drawable/main_like_btn_b"
        android:textColor="#fff"
        android:visibility="invisible" />
    
    <TextView
        android:id="@+id/list_my_car_tvLikeText"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@id/list_my_car_tvInfo"
        android:layout_toLeftOf="@id/list_my_car_btnLike"
        android:gravity="center_vertical"
        android:text="@string/like"
        android:textColor="@color/holo_text"
        android:visibility="invisible" />
    
</RelativeLayout>
