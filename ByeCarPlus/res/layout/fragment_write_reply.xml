<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/writeReplyPage_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg" >

    <com.byecar.views.TitleBar
        android:id="@+id/writeReplyPage_titleBar"
        android:layout_width="match_parent"
    	android:layout_height="0dp" />
    
    <Button 
        android:id="@+id/writeReplyPage_btnSubmit"
        android:layout_width="0dp"
    	android:layout_height="0dp"
    	android:layout_alignParentTop="true"
    	android:layout_alignParentRight="true"
    	android:background="@drawable/reveiw_episode_complete_btn" />

    <View 
        android:id="@+id/writeReplyPage_replyBadge"
        android:layout_width="0dp"
    	android:layout_height="0dp"
    	android:layout_alignParentLeft="true"
    	android:layout_below="@id/writeReplyPage_titleBar"
    	android:background="@drawable/dealer_post_reply" />
    
    <TextView 
        android:id="@+id/writeReplyPage_tvTo"
        android:layout_width="0dp"
    	android:layout_height="0dp"
    	android:layout_toRightOf="@id/writeReplyPage_replyBadge"
    	android:layout_below="@id/writeReplyPage_titleBar"
    	android:textColor="@color/holo_text"
    	android:gravity="center_vertical|right" />
    
    <EditText 
        android:id="@+id/writeReplyPage_etContent"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@id/writeReplyPage_tvTo"
    	android:textColor="@color/holo_text"
    	android:inputType="textMultiLine|textNoSuggestions"
    	android:gravity="top|left"
    	android:background="#0000" />
    
</RelativeLayout>
