<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/carListPage_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg" >

    <android.support.v4.widget.SwipeRefreshLayout
        android:id="@+id/carListPage_swipe_container"
        android:layout_width="match_parent"
        android:layout_height="match_parent" >

        <ListView
            android:id="@+id/carListPage_listView"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:listSelector="@android:color/transparent"
    		android:cacheColorHint="#0000"
            android:background="#0000" />
        
    </android.support.v4.widget.SwipeRefreshLayout>

    <View 
        android:id="@+id/carListPage_buttonBg"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_alignParentBottom="true"
        android:visibility="invisible"
        android:background="@drawable/button_bg" />
    
    <Button
        android:id="@+id/carListPage_btnRegistration"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_centerHorizontal="true"
        android:layout_alignTop="@id/carListPage_buttonBg"
        android:visibility="invisible" />
    
    <com.byecar.views.TitleBar
        android:id="@+id/carListPage_titleBar"
        android:layout_width="match_parent"
    	android:layout_height="0dp" />
    
    <Button
        android:id="@+id/carListPage_btnGuide"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:background="@drawable/guide_btn" />
    
    <Button
        android:id="@+id/carListPage_btnSearch"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:layout_alignTop="@id/carListPage_btnGuide"
        android:layout_toLeftOf="@id/carListPage_btnGuide"
        android:background="@drawable/search_btn" />
        
</RelativeLayout>
