<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content" >

    <TextView
        android:id="@+id/list_orderset_retail_tvRegdate"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentTop="true"
        android:textColor="#fff"
        android:gravity="bottom" />
    
    <TextView
        android:id="@+id/list_orderset_retail_tvName"
        android:layout_width="wrap_content"
        android:layout_height="0dp"
        android:layout_below="@id/list_orderset_retail_tvRegdate"
        android:layout_alignLeft="@id/list_orderset_retail_tvRegdate"
        android:textColor="#fff"
        android:gravity="top" />

    <TextView
        android:id="@+id/list_orderset_retail_tvRight"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content" 
        android:layout_alignParentRight="true"
        android:layout_centerVertical="true"
        android:textColor="#fff"
        android:gravity="right" />

</RelativeLayout>