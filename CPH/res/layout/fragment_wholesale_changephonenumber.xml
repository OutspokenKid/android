<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <!-- 타이틀바. -->
    
    <com.cmons.cph.views.TitleBar
	    android:id="@+id/wholesaleChangePhoneNumberPage_titleBar" 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true" />
    
    <!-- 배경. -->
    
    <ImageView 
        android:id="@+id/wholesaleChangePhoneNumberPage_ivBg" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/wholesaleChangePhoneNumberPage_titleBar"
	    android:scaleType="centerCrop"
	    android:src="@drawable/setting_bg2" />

    <TextView
        android:id="@+id/wholesaleChangePhoneNumberPage_tvPhoneNumber"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/wholesaleChangePhoneNumberPage_titleBar"
        android:text="@string/phoneNumber"
        android:textColor="#fff"
        android:gravity="bottom" />

    <EditText
        android:id="@+id/wholesaleChangePhoneNumberPage_etPhoneNumber"
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_below="@id/wholesaleChangePhoneNumberPage_tvPhoneNumber"
	    android:layout_alignParentLeft="true"
	    android:background="@drawable/text_box"
	    android:gravity="center"
	    android:hint="@string/hintForChangePhoneNumber"
	    android:inputType="phone"
	    android:textColor="#000"
	    android:textColorHint="#555" />

    <EditText
        android:id="@+id/wholesaleChangePhoneNumberPage_etCertify"
        android:layout_width="0dp"
    	android:layout_height="0dp"
    	android:layout_below="@id/wholesaleChangePhoneNumberPage_etPhoneNumber"
	    android:layout_alignParentLeft="true"
	    android:background="@drawable/text_box3"
	    android:gravity="center"
	    android:hint="@string/hintForCertification"
	    android:inputType="number"
	    android:textColor="#000"
	    android:textColorHint="#555" />
    
    <Button 
        android:id="@+id/wholesaleChangePhoneNumberPage_btnSendCertification" 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_alignTop="@id/wholesaleChangePhoneNumberPage_etCertify"
	    android:layout_toRightOf="@id/wholesaleChangePhoneNumberPage_etCertify"
	    android:background="@drawable/num_send_btn" />
    
    <Button 
        android:id="@+id/wholesaleChangePhoneNumberPage_btnCertify" 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_alignTop="@id/wholesaleChangePhoneNumberPage_etCertify"
	    android:layout_toRightOf="@id/wholesaleChangePhoneNumberPage_etCertify"
	    android:visibility="invisible"
	    android:background="@drawable/certification_btn" />
    
</RelativeLayout>