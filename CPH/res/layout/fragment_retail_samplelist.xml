<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <!-- 타이틀바. -->
    
    <com.cmons.cph.views.TitleBar
	    android:id="@+id/retailSamplePage_titleBar" 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true" />

    <!-- 배경. -->
    
    <ImageView 
        android:id="@+id/retailSamplePage_ivBg" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:scaleType="centerCrop" />
    
    <Button 
        android:id="@+id/retailSamplePage_btnRequest" 
	    android:layout_width="0dp"
	    android:layout_height="0dp"
	    android:layout_below="@id/retailSamplePage_titleBar"
	    android:layout_alignParentLeft="true"
	    android:background="@drawable/sample_recommand_btn_a" />
       
	<Button 
        android:id="@+id/retailSamplePage_btnApproval" 
	    android:layout_width="0dp"
	    android:layout_height="0dp"
	    android:layout_alignTop="@id/retailSamplePage_btnRequest"
	    android:layout_toRightOf="@id/retailSamplePage_btnRequest"
	    android:background="@drawable/sample_confirm_btn_b" />
	
	<Button 
        android:id="@+id/retailSamplePage_btnReturn" 
	    android:layout_width="0dp"
	    android:layout_height="0dp"
	    android:layout_alignTop="@id/retailSamplePage_btnApproval"
	    android:layout_toRightOf="@id/retailSamplePage_btnApproval"
	    android:background="@drawable/sample_return_btn_b" />
	
	<Button 
        android:id="@+id/retailSamplePage_btnComplete" 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_alignTop="@id/retailSamplePage_btnReturn"
	    android:layout_toRightOf="@id/retailSamplePage_btnReturn"
	    android:background="@drawable/sample_return_done_btn_b" />

    <TextView 
        android:id="@+id/retailSamplePage_tvSearch"
        android:layout_width="wrap_content"
    	android:layout_height="wrap_content"
    	android:layout_below="@id/retailSamplePage_btnRequest"
	    android:layout_alignParentLeft="true"
	    android:text="@string/searchSample"
    	android:textColor="#fff" />
       
    <EditText
        android:id="@+id/retailSamplePage_editText"
        android:layout_width="0dp"
    	android:layout_height="0dp"
    	android:layout_below="@id/retailSamplePage_tvSearch"
	    android:layout_alignParentLeft="true"
	    android:background="@drawable/txt_box3"
	    android:gravity="center"
	    android:hint="@string/hintForSearchSample"
	    android:textColor="#000"
	    android:textColorHint="#555" />
        
	<Button 
        android:id="@+id/retailSamplePage_btnSearch" 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_alignTop="@id/retailSamplePage_editText"
	    android:layout_toRightOf="@id/retailSamplePage_editText"
	    android:background="@drawable/search_btn" />

	<ListView 
	    android:id="@+id/retailSamplePage_listView" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/retailSamplePage_editText"
	    android:cacheColorHint="#0000" />
	
	<RelativeLayout
	    android:id="@+id/retailSamplePage_popupRelative"
	    android:layout_width="0dp"
	    android:layout_height="0dp"
	    android:layout_centerInParent="true"
	    android:visibility="invisible"
	    android:background="@drawable/sample_popup_bg" >
	    
	    <Button 
	        android:id="@+id/retailSamplePage_btnClose" 
		    android:layout_width="0dp"
		    android:layout_height="0dp"
		    android:layout_alignParentTop="true"
		    android:layout_alignParentRight="true"
		    android:background="@drawable/sample_close_btn" />

	    <TextView 
	        android:id="@+id/retailSamplePage_tvShopName"
	        android:layout_width="match_parent"
	    	android:layout_height="0dp"
		    android:layout_alignParentLeft="true"
		    android:layout_alignParentTop="true"
		    android:gravity="center_vertical"
	    	android:textColor="#000" />
	    
	    <View 
	        android:id="@+id/retailSamplePage_line1"
	        android:layout_width="match_parent"
	    	android:layout_height="1dp"
	    	android:layout_below="@id/retailSamplePage_tvShopName"
	    	android:background="#f3f3f3" />
	    
	    <View
	        android:id="@+id/retailSamplePage_line2" 
	        android:layout_width="match_parent"
	    	android:layout_height="1dp"
	    	android:layout_below="@id/retailSamplePage_line1"
	    	android:background="#d2d2d2" />
	    
	    <TextView 
	        android:id="@+id/retailSamplePage_tvOwnerName"
	        android:layout_width="match_parent"
	    	android:layout_height="0dp"
	    	android:layout_below="@id/retailSamplePage_line2"
	    	android:gravity="center_vertical"
	    	android:textColor="#000" />
	    
	    <View 
	        android:id="@+id/retailSamplePage_line3" 
	        android:layout_width="match_parent"
	    	android:layout_height="1dp"
	    	android:layout_below="@id/retailSamplePage_tvOwnerName"
	    	android:background="#f3f3f3" />
	    
	    <View 
	        android:id="@+id/retailSamplePage_line4" 
	        android:layout_width="match_parent"
	    	android:layout_height="1dp"
	    	android:layout_below="@id/retailSamplePage_line3"
	    	android:background="#d2d2d2" />
	    
	    <TextView 
	        android:id="@+id/retailSamplePage_tvPhone"
	        android:layout_width="match_parent"
	    	android:layout_height="0dp"
	    	android:layout_below="@id/retailSamplePage_line4"
	    	android:gravity="center_vertical"
	    	android:textColor="#000" />
	    
	    <View 
	        android:id="@+id/retailSamplePage_line5"
	        android:layout_width="match_parent"
	    	android:layout_height="1dp"
	    	android:layout_below="@id/retailSamplePage_tvPhone"
	    	android:background="#f3f3f3" />
	    
	    <View 
	        android:id="@+id/retailSamplePage_line6"
	        android:layout_width="match_parent"
	    	android:layout_height="1dp"
	    	android:layout_below="@id/retailSamplePage_line5"
	    	android:background="#d2d2d2" />
	    
	    <TextView 
	        android:id="@+id/retailSamplePage_tvSample"
	        android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:layout_below="@id/retailSamplePage_line6"
	    	android:textColor="#000" />
	    
	    <Button
	        android:id="@+id/retailSamplePage_btnConfirm"
	        android:layout_width="0dp"
	    	android:layout_height="0dp" />
	    
	</RelativeLayout>
    
</RelativeLayout>