<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
	android:id="@+id/signUpForSearchPage_mainLayout"
	android:layout_width="match_parent"
	android:layout_height="wrap_content"
	android:background="#fff" >

	<!-- 타이틀바. -->

	<com.cmons.cph.views.TitleBar
	    android:id="@+id/signUpForSearchPage_titleBar" 
	    android:layout_width="match_parent"
	    android:layout_height="0dp" />
    
    <!-- 배경. -->
	    
    <ImageView 
        android:id="@+id/signUpForSearchPage_ivBg"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@id/signUpForSearchPage_titleBar"
    	android:scaleType="centerCrop" />
    
    <ScrollView 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/signUpForSearchPage_titleBar"
	    android:fillViewport="true" >
	
	    <RelativeLayout
	        android:id="@+id/signUpForSearchPage_relativeSearchInfo"
	        android:layout_width="match_parent"
	        android:layout_height="wrap_content" >
	
	        <!-- 상호명 -->
	
	        <TextView
	            android:id="@+id/signUpForSearchPage_tvCompanyName"
	            android:layout_width="wrap_content"
	            android:layout_height="0dp"
	            android:layout_alignParentTop="true"
	            android:layout_alignParentLeft="true"
	            android:gravity="center_vertical"
	            android:text="@string/searchCompanyName"
	            android:textColor="#fff" />
	
	        <EditText
	            android:id="@+id/signUpForSearchPage_etCompanyName"
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@id/signUpForSearchPage_tvCompanyName"
	            android:singleLine="true"
	            android:gravity="center"
	            android:hint="@string/hintForSearchCompanyName"
	            android:inputType="text"
	            android:background="#b2ffffff"
	            android:textColor="#000000"
	    		android:textColorHint="#4a4a4a" />
	
	        <Button
	            android:id="@+id/signUpForSearchPage_btnCompanyName"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_alignTop="@id/signUpForSearchPage_etCompanyName"
	            android:layout_toRightOf="@id/signUpForSearchPage_etCompanyName"
	            android:background="@drawable/search_btn" />
	
	        <!-- 전화번호 검색 -->
	
	        <TextView
	            android:id="@+id/signUpForSearchPage_tvCompanyPhone"
	            android:layout_width="wrap_content"
	            android:layout_height="0dp"
	            android:layout_alignLeft="@id/signUpForSearchPage_tvCompanyName"
	            android:layout_below="@id/signUpForSearchPage_etCompanyName"
	            android:gravity="center_vertical"
	            android:text="@string/searchCompanyPhone"
	            android:textColor="#fff" />
	
	        <EditText
	            android:id="@+id/signUpForSearchPage_etCompanyPhone"
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@id/signUpForSearchPage_tvCompanyPhone"
	            android:singleLine="true"
	            android:gravity="center"
	            android:hint="@string/hintForSearchCompanyPhone"
	            android:inputType="phone"
	            android:background="#b2ffffff"
	            android:textColor="#4a4a4a"
	    		android:textColorHint="#4a4a4a"  />
	
	        <Button
	            android:id="@+id/signUpForSearchPage_btnCompanyPhone"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_alignTop="@id/signUpForSearchPage_etCompanyPhone"
	            android:layout_toRightOf="@id/signUpForSearchPage_etCompanyPhone"
	            android:background="@drawable/search_btn" />
	
	        <!-- 매장 위치 검색 -->
	
	        <TextView
	            android:id="@+id/signUpForSearchPage_tvCompanyLocation"
	            android:layout_width="wrap_content"
	            android:layout_height="0dp"
	            android:layout_alignLeft="@id/signUpForSearchPage_tvCompanyPhone"
	            android:layout_below="@id/signUpForSearchPage_etCompanyPhone"
	            android:gravity="center_vertical"
	            android:text="@string/searchCompanyLocation"
	            android:textColor="#fff" />
	
	        <!-- 층. -->
	        
	        <Button
	            android:id="@+id/signUpForSearchPage_btnCompanyFloor"
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@id/signUpForSearchPage_tvCompanyLocation"
	            android:text="@string/floor"
	            android:textColor="#4a4a4a"
	            android:background="@drawable/drop_btn" />
	        
	        <!-- 열. -->

			<Button
	            android:id="@+id/signUpForSearchPage_btnCompanyLine"
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_alignTop="@id/signUpForSearchPage_btnCompanyFloor"
	            android:layout_toRightOf="@id/signUpForSearchPage_btnCompanyFloor"
	            android:text="@string/line"
	            android:textColor="#4a4a4a"
	            android:background="@drawable/drop2_btn" />	        
			
	        <!-- 호. -->
	
	        <Button
	            android:id="@+id/signUpForSearchPage_btnCompanyRoomNumber"
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_alignTop="@id/signUpForSearchPage_btnCompanyLine"
	            android:layout_toRightOf="@id/signUpForSearchPage_btnCompanyLine"
	            android:text="@string/roomNumber"
	            android:textColor="#4a4a4a"
	            android:background="@drawable/drop_btn" />
	
	        <Button
	            android:id="@+id/signUpForSearchPage_btnCompanyLocation"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_alignTop="@id/signUpForSearchPage_btnCompanyRoomNumber"
	            android:layout_toRightOf="@id/signUpForSearchPage_btnCompanyRoomNumber"
	            android:background="@drawable/search_btn" />
	
	        <!-- 사업자 등록번호 검색 -->
	
	        <TextView
	            android:id="@+id/signUpForSearchPage_tvCompanyRegistration"
	            android:layout_width="wrap_content"
	            android:layout_height="0dp"
	            android:layout_alignLeft="@id/signUpForSearchPage_tvCompanyPhone"
	            android:layout_below="@id/signUpForSearchPage_etCompanyPhone"
	            android:gravity="center_vertical"
	            android:text="@string/searchCompanyRegistration"
	            android:textColor="#fff" />
	
	        <EditText
	            android:id="@+id/signUpForSearchPage_etCompanyRegistration"
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:layout_alignParentLeft="true"
	            android:layout_below="@id/signUpForSearchPage_tvCompanyRegistration"
	            android:singleLine="true"
	            android:gravity="center"
	            android:hint="@string/hintForSearchCompanyRegistration"
	            android:inputType="number"
	            android:background="#b2ffffff"
	            android:textColor="#4a4a4a"
	    		android:textColorHint="#4a4a4a"  />
	
	        <Button
	            android:id="@+id/signUpForSearchPage_btnCompanyRegistration"
	            android:layout_width="match_parent"
	            android:layout_height="0dp"
	            android:layout_alignTop="@id/signUpForSearchPage_etCompanyRegistration"
	            android:layout_toRightOf="@id/signUpForSearchPage_etCompanyRegistration"
	            android:background="@drawable/search_btn" />
	    </RelativeLayout>
	
	</ScrollView>
    	
    <!-- 그림자. -->
    
    <View 
        android:id="@+id/signUpForSearchPage_titleShadow" 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_below="@id/signUpForSearchPage_titleBar" 
	    android:background="@drawable/shadow"/>
    
</RelativeLayout>