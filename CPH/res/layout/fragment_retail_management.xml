<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <!-- 타이틀바. -->
	    
    <com.cmons.cph.views.TitleBar
	    android:id="@+id/retailManagementPage_titleBar" 
	    android:layout_width="match_parent"
	    android:layout_height="0dp" />
    
    <!-- 배경. -->
    
    <ImageView 
        android:id="@+id/retailManagementPage_ivBg" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/retailManagementPage_titleBar"
	    android:scaleType="centerCrop" />
    
    <ScrollView
        android:id="@+id/retailManagementPage_scrollView"
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/retailManagementPage_titleBar" >
	    
	    <RelativeLayout
		    android:layout_width="match_parent"
		    android:layout_height="wrap_content" >
		
	        <TextView 
		        android:id="@+id/retailManagementPage_tvNameText"
		        android:layout_width="wrap_content"
		    	android:layout_height="0dp"
			    android:layout_alignParentLeft="true"
			    android:layout_alignParentTop="true"
			    android:gravity="center_vertical"
			    android:text="@string/companyName"
		    	android:textColor="#fff" />
	        
	        <View 
	            android:id="@+id/retailManagementPage_icon"
		        android:layout_width="0dp"
		    	android:layout_height="0dp"
		    	android:layout_alignParentRight="true"
			    android:layout_alignParentTop="true" />
	        
	        <TextView 
		        android:id="@+id/retailManagementPage_tvName"
		        android:layout_width="match_parent"
		    	android:layout_height="0dp"
		    	android:layout_below="@id/retailManagementPage_tvNameText"
		    	android:background="@drawable/txt_box"
			    android:gravity="center"
		    	android:textColor="#000" />
	        
	        <TextView 
		        android:id="@+id/retailManagementPage_tvRegText"
		        android:layout_width="wrap_content"
		    	android:layout_height="0dp"
			    android:layout_below="@id/retailManagementPage_tvName"
			    android:gravity="center_vertical"
			    android:text="@string/registrationNumber"
		    	android:textColor="#fff" />
	        
	        <TextView 
		        android:id="@+id/retailManagementPage_tvReg"
		        android:layout_width="match_parent"
		    	android:layout_height="0dp"
		    	android:layout_below="@id/retailManagementPage_tvRegText"
		    	android:background="@drawable/txt_box"
			    android:gravity="center"
		    	android:textColor="#000" />
	        
	        <View
	            android:id="@+id/retailManagementPage_changeReg"
		        android:layout_width="0dp"
		    	android:layout_height="0dp"
		    	android:layout_alignTop="@id/retailManagementPage_tvReg"
		    	android:layout_alignParentRight="true"
		    	android:background="@drawable/retail_change_btn" />
	        
	        <TextView 
		        android:id="@+id/retailManagementPage_tvOwnerNameText"
		        android:layout_width="wrap_content"
		    	android:layout_height="0dp"
			    android:layout_below="@id/retailManagementPage_tvReg"
			    android:gravity="center_vertical"
			    android:text="@string/ownerName"
		    	android:textColor="#fff" />
	        
	        <TextView 
		        android:id="@+id/retailManagementPage_tvOwnerName"
		        android:layout_width="match_parent"
		    	android:layout_height="0dp"
		    	android:layout_below="@id/retailManagementPage_tvOwnerNameText"
		    	android:background="@drawable/txt_box"
			    android:gravity="center"
		    	android:textColor="#000" />
	        
	        <TextView 
		        android:id="@+id/retailManagementPage_tvPhoneText"
		        android:layout_width="wrap_content"
		    	android:layout_height="0dp"
			    android:layout_below="@id/retailManagementPage_tvOwnerName"
			    android:gravity="center_vertical"
			    android:text="@string/number"
		    	android:textColor="#fff" />
	        
	        <TextView 
		        android:id="@+id/retailManagementPage_tvPhone"
		        android:layout_width="match_parent"
		    	android:layout_height="0dp"
		    	android:layout_below="@id/retailManagementPage_tvPhoneText"
		    	android:background="@drawable/txt_box"
			    android:gravity="center"
		    	android:textColor="#000" />
	        
	        <View
	            android:id="@+id/retailManagementPage_changePhone"
		        android:layout_width="0dp"
		    	android:layout_height="0dp"
		    	android:layout_alignTop="@id/retailManagementPage_tvPhone"
		    	android:layout_alignParentRight="true"
		    	android:background="@drawable/retail_change_btn" />
	        
	        <TextView 
		        android:id="@+id/retailManagementPage_tvAddressText"
		        android:layout_width="wrap_content"
		    	android:layout_height="0dp"
			    android:layout_below="@id/retailManagementPage_tvPhone"
			    android:gravity="center_vertical"
			    android:text="@string/addressForRetail"
		    	android:textColor="#fff" />
	        
	        <TextView 
		        android:id="@+id/retailManagementPage_tvAddress"
		        android:layout_width="match_parent"
		    	android:layout_height="0dp"
		    	android:layout_below="@id/retailManagementPage_tvAddressText"
		    	android:background="@drawable/txt_box"
			    android:gravity="center"
		    	android:textColor="#000" />
	        
	        <View
	            android:id="@+id/retailManagementPage_changeAddress"
		        android:layout_width="0dp"
		    	android:layout_height="0dp"
		    	android:layout_alignTop="@id/retailManagementPage_tvAddress"
		    	android:layout_alignParentRight="true"
		    	android:background="@drawable/retail_change_btn" />
	        
	        <TextView 
		        android:id="@+id/retailManagementPage_tvMallUrlText"
		        android:layout_width="wrap_content"
		    	android:layout_height="0dp"
			    android:layout_below="@id/retailManagementPage_tvAddress"
			    android:gravity="center_vertical"
			    android:text="@string/mallUrl"
		    	android:textColor="#fff" />
	        
	        <TextView 
		        android:id="@+id/retailManagementPage_tvMallUrl"
		        android:layout_width="match_parent"
		    	android:layout_height="0dp"
		    	android:layout_below="@id/retailManagementPage_tvMallUrlText"
		    	android:background="@drawable/txt_box"
			    android:gravity="center"
		    	android:textColor="#000" />
	        
	        <View
	            android:id="@+id/retailManagementPage_changeMallUrl"
		        android:layout_width="0dp"
		    	android:layout_height="0dp"
		    	android:layout_alignTop="@id/retailManagementPage_tvMallUrl"
		    	android:layout_alignParentRight="true"
		    	android:background="@drawable/retail_change_btn" />
		    
		</RelativeLayout>

    </ScrollView>
    
</RelativeLayout>
    
