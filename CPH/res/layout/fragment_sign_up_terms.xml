<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >

    <com.cmons.cph.views.TitleBar
	    android:id="@+id/signUpForTermsPage_titleBar" 
	    android:layout_width="match_parent"
	    android:layout_height="0dp" />
    
    <!-- 배경. -->
	    
    <ImageView 
        android:id="@+id/signUpForTermsPage_ivBg"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@id/signUpForTermsPage_titleBar"
    	android:scaleType="centerCrop" />
    
	<!-- 타이틀바. -->
	
    <ScrollView
        android:id="@+id/signUpForTermsPage_scrollView" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/signUpForTermsPage_titleBar"
	    android:fillViewport="true" >
	
        <!-- 약관 텍스트. -->
        
        <TextView
            android:id="@+id/signUpForTermsPage_tvTerms"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:text="@string/termsOfUse"
            android:textColor="#fff" />
	    
	</ScrollView>
    
    <!-- 그림자. -->
    
    <View 
        android:id="@+id/signUpForTermsPage_titleShadow" 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_below="@id/signUpForTermsPage_titleBar" 
	    android:background="@drawable/shadow"/>
    
</RelativeLayout>