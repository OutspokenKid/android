<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <com.cmons.cph.views.TitleBar
	    android:id="@+id/wholesaleShopPage_titleBar" 
	    android:layout_width="match_parent"
	    android:layout_height="0dp" />

    <GridView 
        android:id="@+id/wholesaleShopPage_gridView" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/wholesaleShopPage_titleBar" 
	    android:cacheColorHint="#0000" />

    <RelativeLayout
        android:id="@+id/wholesaleShopPage_menuRelative"
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:visibility="invisible" >
        
        <Button 
	        android:id="@+id/wholesaleShopPage_btnCategory1" 
		    android:layout_width="0dp"
		    android:layout_height="0dp"
		    android:layout_alignParentLeft="true"
		    android:layout_centerVertical="true"
		    android:background="#b00" />
        
        <Button 
	        android:id="@+id/wholesaleShopPage_btnCategory2" 
		    android:layout_width="0dp"
		    android:layout_height="0dp"
		    android:layout_alignTop="@id/wholesaleShopPage_btnCategory1"
		    android:layout_toRightOf="@id/wholesaleShopPage_btnCategory1"
		    android:background="#0b0" />
        
        <Button 
	        android:id="@+id/wholesaleShopPage_btnCategory3" 
		    android:layout_width="0dp"
		    android:layout_height="0dp"
		    android:layout_alignTop="@id/wholesaleShopPage_btnCategory2"
		    android:layout_toRightOf="@id/wholesaleShopPage_btnCategory2"
		    android:background="#00b" />
        
    </RelativeLayout>
	
    <View 
        android:id="@+id/wholesaleShopPage_cover"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:visibility="invisible"
    	android:background="#a000" />
    
    <RelativeLayout
        android:id="@+id/wholesaleShopPage_categoryRelative"
        android:layout_width="0dp"
    	android:layout_height="0dp"
    	android:visibility="invisible" >
	    
        <ListView 
        	android:id="@+id/wholesaleShopPage_listView"
        	android:layout_width="match_parent"
    		android:layout_height="match_parent" />
        
        <Button 
            android:id="@+id/wholesaleShopPage_btnClose"
        	android:layout_width="0dp"
    		android:layout_height="0dp"
    		android:layout_alignParentTop="true"
    		android:layout_alignParentRight="true"
    		android:background="#f0f" />
        
    </RelativeLayout>
    
</RelativeLayout>