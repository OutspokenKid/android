<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <!-- 타이틀바. -->
    
    <com.cmons.cph.views.TitleBar
	    android:id="@+id/commonStaffPage_titleBar" 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true" />

    <!-- 배경. -->
    
    <ImageView 
        android:id="@+id/commonStaffPage_ivBg" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:scaleType="centerCrop" />
    
    <Button 
        android:id="@+id/commonStaffPage_btnRequest" 
	    android:layout_width="0dp"
	    android:layout_height="0dp"
	    android:layout_below="@id/commonStaffPage_titleBar"
	    android:layout_alignParentLeft="true"
	    android:background="@drawable/staff_confirm_btn_a" />
       
	<Button 
        android:id="@+id/commonStaffPage_btnStaff" 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_alignTop="@id/commonStaffPage_btnRequest"
	    android:layout_toRightOf="@id/commonStaffPage_btnRequest"
	    android:background="@drawable/staff_list_btn_b" />

	<ListView 
	    android:id="@+id/commonStaffPage_listView" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/commonStaffPage_btnRequest"
	    android:layout_alignParentLeft="true"
	    android:cacheColorHint="#0000" />
    
</RelativeLayout>