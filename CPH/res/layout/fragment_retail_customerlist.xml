<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <!-- 타이틀바. -->
    
    <com.cmons.cph.views.TitleBar
	    android:id="@+id/retailCustomerListPage_titleBar" 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true" />

    <!-- 배경. -->
    
    <ImageView 
        android:id="@+id/retailCustomerListPage_ivBg" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/retailCustomerListPage_titleBar"
	    android:scaleType="centerCrop" />
    
    <Button 
        android:id="@+id/retailCustomerListPage_btnOrder" 
	    android:layout_width="0dp"
	    android:layout_height="0dp"
	    android:layout_below="@id/retailCustomerListPage_titleBar"
	    android:layout_alignParentLeft="true"
	    android:background="@drawable/retail_statement_btn_a" />
       
	<Button 
        android:id="@+id/retailCustomerListPage_btnPartner" 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_alignTop="@id/retailCustomerListPage_btnOrder"
	    android:layout_toRightOf="@id/retailCustomerListPage_btnOrder"
	    android:background="@drawable/retail_customer2_btn_b" />

    <TextView 
        android:id="@+id/retailCustomerListPage_tvCount"
        android:layout_width="match_parent"
    	android:layout_height="0dp"
    	android:layout_below="@id/retailCustomerListPage_btnOrder"
    	android:gravity="center"
    	android:textColor="#fff" />
       
	<ListView 
	    android:id="@+id/retailCustomerListPage_listView" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/retailCustomerListPage_tvCount"
	    android:layout_alignParentLeft="true" />
    
</RelativeLayout>