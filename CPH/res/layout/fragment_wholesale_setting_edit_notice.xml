<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="match_parent" >
    
    <!-- 타이틀바. -->
    
    <com.cmons.cph.views.TitleBar
	    android:id="@+id/wholesaleSettingEditNoticePage_titleBar" 
	    android:layout_width="match_parent"
	    android:layout_height="0dp"
	    android:layout_alignParentLeft="true"
	    android:layout_alignParentTop="true" />

    <!-- 배경. -->
    
    <ImageView 
        android:id="@+id/wholesaleSettingEditNoticePage_ivBg" 
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:layout_below="@id/wholesaleSettingEditNoticePage_titleBar"
	    android:scaleType="centerCrop"
	    android:src="@drawable/setting_bg" />

    <TextView
        android:id="@+id/wholesaleSettingEditNoticePage_tvTitle"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/wholesaleSettingEditNoticePage_titleBar"
        android:text="@string/noticeTitle"
        android:textColor="#fff"
        android:gravity="center_vertical" />
    
    <EditText
        android:id="@+id/wholesaleSettingEditNoticePage_etTitle"
        android:layout_width="0dp"
    	android:layout_height="0dp"
    	android:layout_below="@id/wholesaleSettingEditNoticePage_tvTitle"
	    android:layout_alignParentLeft="true"
	    android:background="@drawable/txt_box3"
	    android:gravity="center"
	    android:hint="@string/hintForEditNoticeTitle"
	    android:textColor="#000"
	    android:textColorHint="#555" />
    
    <Button
        android:id="@+id/wholesaleSettingEditNoticePage_btnPush"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_alignLeft="@id/wholesaleSettingPage_btnSuggest"
        android:layout_below="@id/wholesaleSettingPage_btnSuggest"
        android:background="@drawable/setting_notification_btn" />
    
    <TextView
        android:id="@+id/wholesaleSettingEditNoticePage_tvContent"
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_below="@id/wholesaleSettingEditNoticePage_etTitle"
        android:text="@string/noticeContent"
        android:textColor="#fff"
        android:gravity="center_vertical" />
    
    <EditText
        android:id="@+id/wholesaleSettingEditNoticePage_etContent"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@id/wholesaleSettingEditNoticePage_tvContent"
	    android:layout_alignParentLeft="true"
	    android:background="@drawable/txt_box3"
	    android:gravity="center"
	    android:hint="@string/hintForEditNoticeContent"
	    android:textColor="#000"
	    android:textColorHint="#555" />
    
</RelativeLayout>