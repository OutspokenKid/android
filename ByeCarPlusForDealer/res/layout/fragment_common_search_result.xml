<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/searchResultPage_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5" >

    <com.byecar.views.TitleBar
        android:id="@+id/searchResultPage_titleBar"
        android:layout_width="match_parent"
    	android:layout_height="0dp" />

    <TextView 
        android:id="@+id/searchResultPage_tvCondition"
        android:layout_width="0dp"
    	android:layout_height="0dp"
    	android:layout_below="@id/searchResultPage_titleBar"
    	android:background="#fff"
    	android:textColor="@color/holo_text"
    	android:gravity="center" />
    
    <View 
        android:id="@+id/searchResultPage_noResult"
        android:layout_width="0dp"
    	android:layout_height="0dp"
    	android:layout_centerHorizontal="true"
    	android:layout_below="@id/searchResultPage_tvCondition"
    	android:visibility="invisible"
    	android:background="@drawable/filter_nothing" />
    
    <ListView 
        android:id="@+id/searchResultPage_listView"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@id/searchResultPage_tvCondition" 
    	android:cacheColorHint="#0000" />
    
</RelativeLayout>
