<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/certifyPhoneNumberPage_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5f5f5" >

    <com.byecar.byecarplusfordealer.views.TitleBar
        android:id="@+id/certifyPhoneNumberPage_titleBar"
        android:layout_width="match_parent"
    	android:layout_height="0dp" />
    
    <ScrollView
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@id/certifyPhoneNumberPage_titleBar"
    	android:fillViewport="true" >
        
        <RelativeLayout
            android:layout_width="match_parent"
    		android:layout_height="wrap_content" >
            
            <TextView
		        android:id="@+id/certifyPhoneNumberPage_tvCertifyPhoneNumber"
		        android:layout_width="wrap_content"
		        android:layout_height="0dp"
		        android:layout_alignParentLeft="true"
		        android:layout_alignParentTop="true"
		        android:gravity="center_vertical"
		        android:text="@string/certifyPhoneNumber"
		        android:textColor="@color/holo_text" />
		    
		    <com.outspoken_kid.views.holo.holo_light.HoloStyleEditText 
		        android:id="@+id/certifyPhoneNumberPage_etPhoneNumber"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/certifyPhoneNumberPage_tvCertifyPhoneNumber" />
		    
		    <com.outspoken_kid.views.holo.holo_light.HoloStyleEditText 
		        android:id="@+id/certifyPhoneNumberPage_etCertificationNumber"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/certifyPhoneNumberPage_etPhoneNumber" />
			
		    <Button 
		        android:id="@+id/certifyPhoneNumberPage_btnConfirm"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/certifyPhoneNumberPage_etCertificationNumber" 
		        android:background="@drawable/phone_call_btn" />
		    
		    <View
		        android:layout_width="10dp"
		        android:layout_height="20dp"
		        android:layout_below="@id/certifyPhoneNumberPage_btnConfirm" />
            
        </RelativeLayout>
        
    </ScrollView>
        
</RelativeLayout>
