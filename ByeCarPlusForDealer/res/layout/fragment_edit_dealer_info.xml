<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/editDealerInfoPage_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/page_bg" >

    <com.byecar.views.TitleBar
        android:id="@+id/editDealerInfoPage_titleBar"
        android:layout_width="match_parent"
    	android:layout_height="0dp" />
        
	<ScrollView
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@id/editDealerInfoPage_titleBar"
    	android:fillViewport="true" >
        
        <RelativeLayout
            android:layout_width="match_parent"
    		android:layout_height="wrap_content" >
    
            <FrameLayout
                android:id="@+id/editDealerInfoPage_profileFrame"
                android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_centerHorizontal="true"
		        android:layout_alignParentTop="true" >
                
                <Button
                    android:id="@+id/editDealerInfoPage_btnProfile"
                    android:layout_width="match_parent"
		        	android:layout_height="match_parent"
		        	android:background="@drawable/sign2_picture_btn" />
                
                <ImageView
                    android:id="@+id/editDealerInfoPage_ivProfile"
                    android:layout_width="match_parent"
		        	android:layout_height="match_parent"
		        	android:scaleType="centerCrop" />
                
                <View
                    android:layout_width="match_parent"
		        	android:layout_height="match_parent"
		        	android:background="@drawable/sign1_frame" />
                
            </FrameLayout>
            
            <TextView
		        android:id="@+id/editDealerInfoPage_tvProfile"
		        android:layout_width="wrap_content"
		        android:layout_height="wrap_content"
		        android:text="@string/touchCameraIcon"
		        android:textColor="#000"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/editDealerInfoPage_profileFrame" />
            
            <View
                android:id="@+id/editDealerInfoPage_lineAfterProfile"
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:layout_below="@id/editDealerInfoPage_tvProfile"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="20dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginBottom="15dp"
		        android:background="@color/holo_text_hint" />
            
            <TextView
		        android:id="@+id/editDealerInfoPage_tvCertifyPhoneNumberText"
		        android:layout_width="wrap_content"
		        android:layout_height="0dp"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@id/editDealerInfoPage_lineAfterProfile"
		        android:gravity="center_vertical"
		        android:text="@string/certifyPhoneNumber"
		        android:textColor="@color/holo_text" />
            
            <TextView 
                android:id="@+id/editDealerInfoPage_tvPhoneNumber"
		        android:layout_width="wrap_content"
		        android:layout_height="0dp"
		        android:layout_below="@id/editDealerInfoPage_tvCertifyPhoneNumberText"
		        android:layout_centerHorizontal="true"
		        android:gravity="center"
		        android:textColor="@color/color_green" />
            
            <View
		        android:id="@+id/editDealerInfoPage_checkIcon"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_toLeftOf="@id/editDealerInfoPage_tvPhoneNumber"
		        android:layout_alignTop="@id/editDealerInfoPage_tvPhoneNumber"
		        android:background="@drawable/user_check" />
            
            <Button 
                android:id="@+id/editDealerInfoPage_btnEditPhoneNumber"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_alignTop="@id/editDealerInfoPage_tvCertifyPhoneNumberText"
				android:layout_alignParentRight="true"		        
		        android:background="@drawable/registration_phone_info_btn" />
            
    		<View
                android:id="@+id/editDealerInfoPage_lineAfterPhoneNumber"
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:layout_below="@id/editDealerInfoPage_tvPhoneNumber"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="20dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginBottom="15dp"
		        android:background="@color/holo_text_hint" />
    		
    		<TextView
		        android:id="@+id/editDealerInfoPage_tvCommonInfoText"
		        android:layout_width="wrap_content"
		        android:layout_height="0dp"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@id/editDealerInfoPage_lineAfterPhoneNumber"
		        android:gravity="center_vertical"
		        android:text="@string/commonInfo"
		        android:textColor="@color/holo_text" />
    		
    		<com.outspoken_kid.views.holo.holo_light.HoloStyleEditText 
                android:id="@+id/editDealerInfoPage_etCommonInfo1"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_below="@id/editDealerInfoPage_tvCommonInfoText"
		        android:layout_centerHorizontal="true" />
            
            <com.outspoken_kid.views.holo.holo_light.HoloStyleEditText 
                android:id="@+id/editDealerInfoPage_etCommonInfo2"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_below="@id/editDealerInfoPage_etCommonInfo1"
		        android:layout_centerHorizontal="true" />
            
            <com.outspoken_kid.views.holo.holo_light.HoloStyleEditText 
                android:id="@+id/editDealerInfoPage_etCommonInfo3"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_below="@id/editDealerInfoPage_etCommonInfo2"
		        android:layout_centerHorizontal="true" />
            
    		<View
                android:id="@+id/editDealerInfoPage_lineAfterCommonInfo"
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:layout_below="@id/editDealerInfoPage_etCommonInfo3"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="20dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginBottom="15dp"
		        android:background="@color/holo_text_hint" />
    		
			<TextView
		        android:id="@+id/editDealerInfoPage_tvAddedInfoText"
		        android:layout_width="wrap_content"
		        android:layout_height="0dp"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@id/editDealerInfoPage_lineAfterCommonInfo"
		        android:gravity="center_vertical"
		        android:text="@string/addedInfo"
		        android:textColor="@color/holo_text" />
			
			<Button 
                android:id="@+id/editDealerInfoPage_btnImage1"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@id/editDealerInfoPage_tvAddedInfoText"
		        android:background="@drawable/sign2_picture2_btn" />
            
            <ImageView
                android:id="@+id/editDealerInfoPage_ivImage1"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_alignTop="@id/editDealerInfoPage_btnImage1"
		        android:layout_alignLeft="@id/editDealerInfoPage_btnImage1"
		        android:scaleType="centerCrop" />
            
            <Button 
                android:id="@+id/editDealerInfoPage_btnImage2"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_alignTop="@id/editDealerInfoPage_btnImage1"
		        android:layout_toRightOf="@id/editDealerInfoPage_btnImage1"
		        android:background="@drawable/sign2_picture3_btn" />
            
            <ImageView
                android:id="@+id/editDealerInfoPage_ivImage2"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_alignTop="@id/editDealerInfoPage_btnImage2"
		        android:layout_alignLeft="@id/editDealerInfoPage_btnImage2"
		        android:scaleType="centerCrop" />

            <TextView
		        android:id="@+id/editDealerInfoPage_tvUploadText"
		        android:layout_width="wrap_content"
		        android:layout_height="0dp"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/editDealerInfoPage_btnImage1"
		        android:gravity="center_vertical"
		        android:text="@string/touchImageIcon"
		        android:textColor="@color/holo_text" />
            
            <com.outspoken_kid.views.holo.holo_light.HoloStyleEditText 
                android:id="@+id/editDealerInfoPage_etAddedInfo1"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_below="@id/editDealerInfoPage_tvUploadText"
		        android:layout_centerHorizontal="true" />
            
            <com.outspoken_kid.views.holo.holo_light.HoloStyleEditText 
                android:id="@+id/editDealerInfoPage_etAddedInfo2"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_below="@id/editDealerInfoPage_etAddedInfo1"
		        android:layout_centerHorizontal="true" />
            
            <com.outspoken_kid.views.holo.holo_light.HoloStyleEditText 
                android:id="@+id/editDealerInfoPage_etAddedInfo3"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_below="@id/editDealerInfoPage_etAddedInfo2"
		        android:layout_centerHorizontal="true" />
            
            <com.outspoken_kid.views.holo.holo_light.HoloStyleEditText 
                android:id="@+id/editDealerInfoPage_etAddedInfo4"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_below="@id/editDealerInfoPage_etAddedInfo3"
		        android:layout_centerHorizontal="true" />
            
            <View
                android:id="@+id/editDealerInfoPage_lineAfterInfo"
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:layout_below="@id/editDealerInfoPage_etAddedInfo4"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="20dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginBottom="15dp"
		        android:background="@color/holo_text_hint" />
            
            <TextView
		        android:id="@+id/editDealerInfoPage_tvIntroduceText"
		        android:layout_width="wrap_content"
		        android:layout_height="0dp"
		        android:layout_alignParentLeft="true"
		        android:layout_below="@id/editDealerInfoPage_lineAfterInfo"
		        android:gravity="center_vertical"
		        android:text="@string/introduce"
		        android:textColor="@color/holo_text" />
            
			<EditText
			    android:id="@+id/editDealerInfoPage_etIntroduce"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/editDealerInfoPage_tvIntroduceText"
		        android:textColor="@color/holo_text"
				android:textColorHint="@color/holo_text_hint"
				android:hint="@string/hintForIntroduce"
				android:gravity="left|top"
				android:padding="10dp"
				android:background="@drawable/white_round_box" />
			
			<View
                android:id="@+id/editDealerInfoPage_lineAfterIntroduce"
		        android:layout_width="match_parent"
		        android:layout_height="1dp"
		        android:layout_below="@id/editDealerInfoPage_etIntroduce"
		        android:layout_marginLeft="10dp"
		        android:layout_marginTop="20dp"
		        android:layout_marginRight="10dp"
		        android:layout_marginBottom="20dp"
		        android:background="@color/holo_text_hint" />
			
			<Button 
			    android:id="@+id/editDealerInfoPage_btnComplete"
		        android:layout_width="0dp"
		        android:layout_height="0dp"
		        android:layout_centerHorizontal="true"
		        android:layout_below="@id/editDealerInfoPage_lineAfterIntroduce"
		        android:background="@drawable/profile_complete_btn" />

			<!-- Bottom blank. -->
			
			<View 
			    android:layout_width="10dp"
		        android:layout_height="20dp"
		        android:layout_below="@id/editDealerInfoPage_btnComplete" />
						
        </RelativeLayout>
        
    </ScrollView>
		    
</RelativeLayout>
