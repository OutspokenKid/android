<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout 
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/openablePostList_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/new_color_page_bg_white2" >

    <com.byecar.views.TitleBar
        android:id="@+id/openablePostList_titleBar"
        android:layout_width="match_parent"
    	android:layout_height="0dp" />

    <ListView 
        android:id="@+id/openablePostList_listView"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:layout_below="@id/openablePostList_titleBar"
    	android:listSelector="@android:color/transparent"
    	android:cacheColorHint="#0000" />
        
</RelativeLayout>
