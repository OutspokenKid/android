<?xml version="1.0" encoding="utf-8"?>
<com.zonecomms.common.views.WrapperView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="0dp"
    android:layout_height="0dp" >
    
    <View 
        android:id="@+id/list_member_imageBg"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:background="@drawable/bg_profile_150" />
    
    <ImageView
        android:id="@+id/list_member_ivImage"
        android:layout_width="0dp"
        android:layout_height="0dp"
        android:scaleType="centerCrop" />
    
    <TextView 
        android:id="@+id/list_member_tvNickname"
        android:layout_width="0dp"
    	android:layout_height="0dp"
    	android:gravity="center_vertical|left"
    	android:textColor="#fff"
    	android:singleLine="true"
    	android:ellipsize="end" />

    <TextView
        android:id="@+id/list_member_tvJoin"
        android:layout_width="0dp"
    	android:layout_height="0dp"
    	android:gravity="center_vertical|left"
    	android:textColor="#fff"
    	android:singleLine="true"
    	android:ellipsize="end" />
    
    <View
        android:id="@+id/list_member_check"
        android:layout_width="0dp"
        android:layout_height="0dp" 
        android:background="@drawable/img_checkbox_off"/>
    
</com.zonecomms.common.views.WrapperView>