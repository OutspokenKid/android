<?xml version="1.0" encoding="utf-8"?>

<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/messagePage_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#000" >
    
    <LinearLayout
	    android:layout_width="match_parent"
	    android:layout_height="match_parent"
	    android:orientation="vertical"
	    android:clickable="true" >
	
	    <com.handmark.pulltorefresh.library.PullToRefreshListView
		    android:id="@+id/messagePage_pullToRefreshView"
		    android:layout_width="match_parent"
	        android:layout_height="0dp"
	        android:layout_weight="1" 
		    android:clickable="true" />
	
	    <View 
	        android:layout_width="match_parent"
	    	android:layout_height="1px"
	    	android:background="#111" />
	    
	    <View 
	        android:layout_width="match_parent"
	    	android:layout_height="1px"
	    	android:background="#444" />
	    
	    <LinearLayout
	    	android:layout_width="match_parent"
	    	android:layout_height="wrap_content"
	    	android:orientation="horizontal"
	    	android:background="#222" >
	        
	        <View
	            android:id="@+id/messagePage_photo"
	            android:layout_width="0dp"
	            android:layout_height="0dp"
	            android:background="@drawable/btn_camera" />
	        
	        <com.outspoken_kid.views.holo_dark.HoloStyleEditText 
	            android:id="@+id/messagePage_etMessage"
	            android:layout_width="0dp"
	            android:layout_height="wrap_content"
	            android:layout_weight="1" />
	        
	        <com.outspoken_kid.views.holo_dark.HoloStyleButton
	            android:id="@+id/messagePage_btnSend"
	            android:layout_width="0dp"
	            android:layout_height="0dp" />
	        
	    </LinearLayout>
	    
	</LinearLayout>
    
</FrameLayout>