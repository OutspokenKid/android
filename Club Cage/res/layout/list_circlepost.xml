<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:layout_height="wrap_content"
    android:background="#fff" >
    
    <FrameLayout
        android:id="@+id/list_circlepost_profileFrame" 
	    android:layout_width="0dp"
	    android:layout_height="0dp" >

       	<View 
	        android:id="@+id/list_circlepost_profileBg" 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent" />
	    
	    <View 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:background="@drawable/mask_profile" />
	    
	    <com.android.volley.toolbox.NetworkImageView
		    android:id="@+id/list_circlepost_ivProfile" 
		    android:layout_width="match_parent"
		    android:layout_height="match_parent"
		    android:scaleType="centerCrop" />
        
    </FrameLayout>
    
    <TextView 
	    android:id="@+id/list_circlepost_tvNickname" 
	    android:layout_width="0dp"
	    android:layout_height="0dp"
	    android:gravity="center_vertical"
	    android:textColor="#000" />
    
    <TextView 
	    android:id="@+id/list_circlepost_tvRegdate" 
	    android:layout_width="0dp"
	    android:layout_height="0dp"
	    android:textColor="#000"
	    android:gravity="center_vertical|right" />
    
	<com.triposo.barone.EllipsizingTextView 
	    android:id="@+id/list_circlepost_tvContent" 
	    android:layout_width="0dp"
	    android:layout_height="0dp"
	    android:maxLines="4"
	    android:textColor="#000" />
	
	<com.android.volley.toolbox.NetworkImageView
	    android:id="@+id/list_circlepost_ivImage" 
	    android:layout_width="0dp"
	    android:layout_height="0dp"
	    android:visibility="gone"
	    android:scaleType="centerCrop" />
	
	<View
	    android:id="@+id/list_circlepost_bottomBg" 
	    android:layout_width="0dp"
	    android:layout_height="0dp"
	    android:background="@drawable/bg_renewal_bottomframe" />
	
	<FrameLayout
        android:id="@+id/list_circlepost_replyFrame" 
	    android:layout_width="0dp"
	    android:layout_height="0dp" >
        
        <View 
            android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:background="@drawable/mask_reply" />
        
        <TextView
        	android:id="@+id/list_circlepost_tvReply" 
		    android:layout_width="0dp"
		    android:layout_height="0dp"
		    android:textColor="#fff"
    		android:gravity="center" />
	        
	    </FrameLayout>
	    
	<FrameLayout
        android:id="@+id/list_circlepost_moreFrame" 
	    android:layout_width="0dp"
	    android:layout_height="0dp" >
        
        <View
            android:id="@+id/list_circlepost_moreBg"
            android:layout_width="match_parent"
	    	android:layout_height="match_parent" />
        
        <View
            android:id="@+id/list_circlepost_more"
            android:layout_width="match_parent"
	    	android:layout_height="match_parent"
	    	android:background="@drawable/mask_more" />
        
    </FrameLayout>

</RelativeLayout>
