<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:id="@+id/signInActivity_mainLayout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/renewal_bg" >
    
    <ScrollView
        android:id="@+id/signInActivity_scrollView"
        android:layout_width="match_parent"
    	android:layout_height="match_parent"
    	android:fillViewport="true" >
        
        <RelativeLayout
            android:id="@+id/signInActivity_innerRelative"
        	android:layout_width="match_parent"
    		android:layout_height="wrap_content" >
    		
            <TextView
            	android:id="@+id/signInActivity_tvNSeries"
		       	android:layout_width="match_parent"
		   		android:layout_height="0dp"
		   		android:layout_alignParentTop="true"
		   		android:textColor="@color/renewal_text_light"
		   		android:gravity="center" />
            
            <Button
                android:id="@+id/signInActivity_btnSignUp"
		       	android:layout_width="0dp"
		   		android:layout_height="0dp"
		   		android:layout_below="@id/signInActivity_tvNSeries"
		   		android:layout_centerHorizontal="true"
		   		android:background="#0000"
		   		android:text="@string/signUp"
		   		android:textColor="@color/renewal_text_light"
		   		android:gravity="center" />
            
            <com.outspoken_kid.views.holo.holo_light.HoloStyleEditText
                android:id="@+id/signInActivity_etId"
		       	android:layout_width="0dp"
		   		android:layout_height="0dp"
		   		android:layout_centerHorizontal="true"
		   		android:layout_below="@id/signInActivity_btnSignUp" />
            
            <com.outspoken_kid.views.holo.holo_light.HoloStyleEditText
                android:id="@+id/signInActivity_etPw"
		       	android:layout_width="0dp"
		   		android:layout_height="0dp"
		   		android:layout_centerHorizontal="true"
		   		android:layout_below="@id/signInActivity_etId" />
            
            <Button
                android:id="@+id/signInActivity_btnSignIn"
		       	android:layout_width="0dp"
		   		android:layout_height="0dp"
		   		android:layout_centerHorizontal="true"
		   		android:layout_below="@id/signInActivity_etPw"
		   		android:background="@drawable/btn_login_01" />
            
            <Button
                android:id="@+id/signInActivity_btnFindIdAndPw"
		       	android:layout_width="0dp"
		   		android:layout_height="0dp"
		   		android:layout_centerHorizontal="true"
		   		android:layout_below="@id/signInActivity_btnSignIn"
		   		android:background="#0000"
		   		android:text="@string/findIdAndPw"
		   		android:textColor="@color/renewal_text_light"
		   		android:gravity="center" />
            
            <TextView
            	android:id="@+id/signInActivity_tvSNSLogin"
		       	android:layout_width="match_parent"
		   		android:layout_height="0dp"
		   		android:layout_below="@id/signInActivity_btnFindIdAndPw"
		   		android:text="@string/signInWithSNS"
		   		android:textColor="@color/renewal_text_light"
		   		android:gravity="center" />
            
            <FrameLayout
                android:id="@+id/signInActivity_fbFrame"
		       	android:layout_width="0dp"
		   		android:layout_height="0dp"
		   		android:layout_alignLeft="@id/signInActivity_btnFindIdAndPw"
		   		android:layout_below="@id/signInActivity_tvSNSLogin" />
            
            <FrameLayout
                android:id="@+id/signInActivity_kkFrame"
		       	android:layout_width="0dp"
		   		android:layout_height="0dp"
		   		android:layout_alignTop="@id/signInActivity_fbFrame"
		   		android:layout_toRightOf="@id/signInActivity_fbFrame" />
            
            <FrameLayout
                android:id="@+id/signInActivity_twFrame"
		       	android:layout_width="0dp"
		   		android:layout_height="0dp"
		   		android:layout_alignLeft="@id/signInActivity_fbFrame"
		   		android:layout_below="@id/signInActivity_fbFrame" />
            
            <FrameLayout
                android:id="@+id/signInActivity_nvFrame"
		       	android:layout_width="0dp"
		   		android:layout_height="0dp"
		   		android:layout_alignTop="@id/signInActivity_twFrame"
		   		android:layout_toRightOf="@id/signInActivity_twFrame" />
            
            <TextView
            	android:id="@+id/signInActivity_tvSNSWarning"
		       	android:layout_width="match_parent"
		   		android:layout_height="0dp"
		   		android:layout_below="@id/signInActivity_twFrame"
		   		android:text="@string/SNSWarning"
		   		android:textColor="@color/renewal_text_light"
		   		android:gravity="center" />
            
        </RelativeLayout>
        
    </ScrollView>
    
    <com.outspoken_kid.views.WebBrowser 
        android:id="@+id/signInActivity_webBrowser"
        android:layout_width="match_parent"
    	android:layout_height="match_parent" />

</FrameLayout>